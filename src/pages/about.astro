---
import '../styles/global.css'; // Importing global styles for the project.
import Navigation from '../components/navigation.astro'; // Importing the Navigation component.
const pageTitle = "About Me"; // Defining the page title for the <title> tag.

const identity = {
  firstName: "Mark",
  country: "Ireland",
  occupation: "Web Developer",
  hobbies: ["music", "running", "art"],
}; // Object storing basic identity information for easy reference.

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"]; // Array of skills to list on the page.
const skillColor = "purple"; // Defining a color variable for styling skill text.

---

<html lang="en">
	<head>
		<meta charset="utf-8" /> <!-- Setting character encoding for the page. -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> <!-- Link to the site's favicon. -->
		<meta name="viewport" content="width=device-width" /> <!-- Ensures proper scaling on mobile devices. -->
		<meta name="generator" content={Astro.generator} /> <!-- Displays Astro as the generator in metadata. -->
		<title> {pageTitle} </title> <!-- Dynamic title of the page based on `pageTitle` variable. -->

		<style define:vars={{skillColor}}>
			h1 {
			  color: purple;
			  font-size: 4rem;
			}
			.skill {
				color: var(--skillColor); /* Using skillColor variable for text color. */
				font-weight: bold;
			}
		</style> <!-- Inline styles using skillColor for customized theme colors. -->
	</head>

	<body>
		<Navigation /> <!-- Including the navigation component at the top of the page. -->

		<p>Here are a few facts about me:</p>
		<ul>
			<li>My name is {identity.firstName}.</li> <!-- Displaying the first name from the identity object. -->
			<li>I live in {identity.country} and I work as a {identity.occupation}.</li> <!-- Displaying location and occupation. -->

			{identity.hobbies.length >= 2 &&
				<li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
			} <!-- Conditional rendering: displays two hobbies if the array has at least two items. -->
		</ul>

		<p>My skills are:</p>
		<ul>
			{skills.map((skill) => <li>{skill}</li>)} <!-- Iterating over the skills array to render each skill in a list item. -->
		</ul>
	</body>
</html>